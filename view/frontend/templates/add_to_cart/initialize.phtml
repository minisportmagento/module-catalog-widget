<script type="text/javascript" data-breeze>
(() => {
    'use strict';

    const fn = ($, _) => {
        const products = <?= $json ?>;
        const tmplAvailable = $('#add-to-cart--template--available').html();
        const tmplUnavailable = $('#add-to-cart--template--unavailable').html();
        const uidTail = Date.now();

        products.forEach((product) => {
            const tmpl = product.isAvailable ? _.template(tmplAvailable) : _.template(tmplUnavailable);

            $(`.widget--add-to-cart[data-product="${product.id}"]`).each((index, element) => {
                const $el = $(element);
                const uid = `${product.id}_${index}_${uidTail}`;

                $el.html(tmpl({
                    product: product,
                    uid: uid,
                    isHideQty: $el.data('hide-qty')
                })).trigger('contentUpdated');
            });
        });
    }

    if (typeof require === 'function')
        require(['jquery', 'underscore'], fn);
    else
        document.addEventListener('breeze:load', () => fn($, _));
})();
</script>
