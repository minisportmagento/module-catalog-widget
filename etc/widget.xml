<?xml version="1.0" encoding="UTF-8"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="minisport_catalogwidget_addtocart" class="Minisport\CatalogWidget\Block\Widget\AddToCart"
            is_email_compatible="false"
            placeholder_image="Magento_Widget::placeholder.gif"
            ttl="86400">
        <label translate="true">Minisport: Add to Cart button</label>
        <description/>
        <parameters>
            <parameter name="product_id" xsi:type="text" required="true" visible="true">
                <label translate="true">Product ID</label>
            </parameter>
            <parameter name="hide_qty" xsi:type="select" visible="true"
                       source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Hide Qty input</label>
            </parameter>
        </parameters>
    </widget>
</widgets>
